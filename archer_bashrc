# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

# User specific aliases and functions
#module load gcc

# If not running interactively, don't do anything
[ -z "$PS1" ] && return

# set PATH so it includes user's private bin if it exists
if [ -d ~/bin ] ; then
 PATH=~/bin:"${PATH}"
fi
export PATH

#Kick vim to give full colour, please
export TERM=xterm-256color

#Alias the Jester
# From Aron...
alias q='qstat -u ${USER}'
alias qa='qstat -a'
alias wq='watch qstat -u ${USER}'
alias s='showq'
alias d='diagnose -f'
alias v='vim'
# VASP mussers
alias t='tail OUTCAR'
alias to='tail OSZICAR'
alias pressure='grep pressure OUTCAR'

# Everyone loves the cookie monster...
alias monster='qstat -u "${USER}" | awk "BEGIN{eat=0;want=0;}{if(\$10~"R"){eat=eat+\$7}else{want=want+\$7}}END{print \"Me eat \",eat,\" cookies! Me want \",want,\" cookies!\"}" '

#Two-line command prompt with host, user & PWD. Titlebar not used anymore?
PS1="${TITLEBAR}${bold}[\t]\u@[ARCHER]\h:\w/ \n> ${normal}"

echo
echo "  GREETINGS PROFESSOR FALKEN.  SHALL WE PLAY A GAME?"
echo

